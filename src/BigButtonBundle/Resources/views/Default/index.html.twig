{% extends "::bootstrap.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('main.css') }}">
{% endblock %}

{% block title %}Tap !{% endblock %}

{% block body %}

	<p>

    </p>

	<div class="row">
		{{ form_start(form) }}
		    {{ form_errors(form) }}

		    <div class="form-group">
		        {# On affiche tous les messages flash dont le nom est « info » #}
      			{% for message in app.session.flashbag.get('info') %}
        			<p class="col-xs-12 col-sm-12 col-md-12 col-lg-8  btn btn-info">{{ message }}</p>
      			{% endfor %}
		    </div>

		    <div>
                {{ form_widget(form.tap,{'attr':{'class':'btn btn-primary col-xs-12 col-sm-12 col-md-12 col-lg-8'}}) }}
    		</div>

		    <div class="form-group">
		        {{ form_errors(form.object) }}
		        {{ form_widget(form.object,{'attr':{'class':'col-xs-12 col-sm-12 col-md-12 col-lg-8'}}) }}
		    </div>

		    <div class="form-group">
		        {{ form_errors(form.infos) }}
		        {{ form_widget(form.infos,{'attr':{'class':'col-xs-12 col-sm-12 col-md-12 col-lg-8'}}) }}
		    </div>

		    <div>
		    	<a class="col-xs-12 col-sm-12 col-md-12 col-lg-8 btn btn-primary" role="button" href="{{path('accueil_homepage')}}">Retour à l'accueil</a>
		    </div>

		{{ form_end(form) }}
	</div>

{% endblock %}