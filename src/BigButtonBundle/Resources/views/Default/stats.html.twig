{% extends "::bootstrap.html.twig" %}

{% block title %}Tap !{% endblock %}

{% block body %}
<a class="col-xs-12 col-sm-12 col-md-12 col-lg-12 btn btn-primary" role="button" href="{{path('big_button_calendar')}}">MODE CALENDRIER</a>
<div class="row">


<h1>Activités du {{ "now"|date("d/m/Y") }}</h1>

	<ul class="col-xs-10 col-sm-8 col-md-6 col-lg-6 list-group">

	  {% for activite in activites %}
	  	{% if activite.top %}
	  			<p class="bg-primary"><strong>{{ activite.nom }}</strong></p>
	  	{% else %}
	  		<blockquote {% if activite.i is odd %}class="blockquote-reverse"{% endif %} >
			    <div class="list-group-item">
					<h3><strong>{{ activite.nom }}</strong></h3>
					<footer><cite>{{ activite.duree }}</cite></footer>
			    </div>
		   	</blockquote>
		{% endif %}
	  {% endfor %}

	</ul>

	<a class="col-xs-12 col-sm-12 col-md-12 col-lg-12 btn btn-primary" role="button" href="{{path('big_button_homepage')}}">RETOUR</a>
</div>

{% endblock %}
